<Window x:Class="FFXIVMonReborn.ExtendedErrorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FFXIVMonReborn"
        mc:Ignorable="d"
        Title="ExtendedErrorView" Width="734.254" ResizeMode="NoResize" Height="434.724" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <Label Margin="8,3,0,0" DockPanel.Dock="Top" Height="Auto" x:Name="ErrorMessage">Error Message that is very important and should be respected by everyone, so please look at it and don't ignore</Label>
            <RichTextBox FontFamily="Consolas" VerticalScrollBarVisibility="Visible" IsReadOnly="True" x:Name="InfoBox" Height="330">
                <RichTextBox.Resources>
                    <Style TargetType="{x:Type Paragraph}">
                        <Setter Property="Margin" Value="0"/>
                    </Style>
                </RichTextBox.Resources>
            </RichTextBox>
            <Button HorizontalAlignment="Right" Margin="0,5,5,5" Width="57" Height="24" Click="ButtonBase_OnClick">OK</Button>
        </StackPanel>
    </Grid>
</Window>
